<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="16dp"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/no_transkasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KD/4/202002030001"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/rp_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. "
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/no_transkasi"/>

        <TextView
            android:id="@+id/txt_nominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@id/rp_label"
            app:layout_constraintTop_toTopOf="@id/rp_label"
            android:text="20.0000"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/status_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dipesan"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="@+id/no_transkasi"
            />

        <TextView
            android:id="@+id/tanggal_tansaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/02/2020 07.00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_transaksi"
            android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>